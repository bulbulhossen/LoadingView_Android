<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.ldoublem.loadingviewlib.LVBlock
            android:id="@+id/lv_block"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <com.ldoublem.loadingviewlib.LVChromeLogo
            android:id="@+id/chrome"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <com.ldoublem.loadingviewlib.LVCircular
            android:id="@+id/LVCircular"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <com.ldoublem.loadingviewlib.LVCircularRing
            android:id="@+id/LVCircularRing"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <com.ldoublem.loadingviewlib.LVCircularCD
            android:id="@+id/LVCircularCD"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <com.ldoublem.loadingviewlib.LVCircularJump
            android:id="@+id/LVCircularJump"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <com.ldoublem.loadingviewlib.LVCircularZoom
            android:id="@+id/LVCircularZoom"
            android:layout_width="100dp"
            android:layout_height="100dp" />


        <com.ldoublem.appleviewlib.LVComputerDesktop
            android:id="@+id/macDesktop"
            android:layout_width="370dp"
            android:layout_height="210dp"
            android:layout_marginLeft="-45dp"
            />

    </LinearLayout>

</LinearLayout>
</ScrollView>